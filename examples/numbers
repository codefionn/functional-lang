zero = .zero
succ x = .succ x

-- substract one from x (decrement)
dec (.succ x) = x

-- add numbers x and y
add (.succ x) y = .succ (add x y)
add .zero y     = y

-- subtract number y from x (may fail)
sub (.succ x) (.succ y) = x
sub (.succ x) .zero     = .succ x

-- multiply x and y
mul .zero         y = .zero
mul (.succ .zero) y = y
mul (.succ x)     y = add (mul x y) y

-- are x and y equal ?
eq (.succ x) (.succ y) = eq x y
eq .zero .zero         = .true
eq _     _             = .false

-- check if x is greater than y
gt (.succ x) (.succ y) = gt x y
gt (.succ _) .zero     = .true
gt _         _         = .false

-- check if x is less than y
le (.succ x) (.succ y) = le x y
le .zero     (.succ _) = .true
le _         _         = .false

-- some numbers
one   = succ zero
two   = add one one
three = add one two
four  = add one three
five  = add one four
six   = add one five
seven = add one six
eight = add one seven
nine  = add one eight
ten   = add one nine
